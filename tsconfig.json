{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./*"],
      "@db/*": ["./db/*"],
      "@duckdb/*": ["./duckdb/*"],
      "@lib/*": ["./lib/*"],
      "@routes/*": ["./routes/*"],
      "@websocket/*": ["./websocket/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist", "drizzle.config.ts", "drizzle/**/*"],
  "include": ["src/**/*"]
}
